.media-view
  height 100%
  
.video-view
  height 100%
  padding-bottom 0.75rem
  
.video-view-left
  position relative
  height 100%
  float left
  width 50%
  padding-right 1em
  
.video-view-right
  position relative
  height 100%
  float left
  width 50%
  padding-left 1em
  
.video-player-wrapper
  position absolute
  top 0
  left 0
  width 100%
  bottom calc(110px + 1em)
  
.video-filmstrip-wrapper
  position absolute
  left 0
  width 100%
  bottom 0

.video-shot-list-container
  max-height 480px
  overflow auto
